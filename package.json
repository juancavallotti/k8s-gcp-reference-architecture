{
  "name": "k8s-experiments",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "db:generate": "npm run db:generate:sqlite && npm run db:generate:postgres",
    "db:generate:sqlite": "prisma generate --schema prisma/sqlite/schema.prisma",
    "db:generate:postgres": "prisma generate --schema prisma/postgres/schema.prisma",
    "db:migrate": "npm run db:migrate:sqlite",
    "db:migrate:sqlite": "prisma migrate dev --schema prisma/sqlite/schema.prisma",
    "db:migrate:postgres": "prisma migrate dev --schema prisma/postgres/schema.prisma",
    "db:deploy": "npm run db:deploy:sqlite",
    "db:deploy:sqlite": "prisma migrate deploy --schema prisma/sqlite/schema.prisma",
    "db:deploy:postgres": "prisma migrate deploy --schema prisma/postgres/schema.prisma"
  },
  "dependencies": {
    "@eetr/react-reducer-utils": "^0.1.1",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.19.2",
    "next": "16.1.6",
    "prisma": "^6.19.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
